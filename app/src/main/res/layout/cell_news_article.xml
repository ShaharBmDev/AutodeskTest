<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_cellNews_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="@id/tv_cellNews_title"
            app:layout_constraintDimensionRatio="w,1.5:1"
            android:contentDescription="@string/article_photo"
            tools:srcCompat="@drawable/article_default_background"/>

    <TextView
            android:id="@+id/tv_cellNews_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/title"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cellNews_photo"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/tv_cellNews_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cellNews_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>

    <TextView
            android:id="@+id/tv_cellNews_secondaryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/secondary_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cellNews_date"
            app:layout_constraintHorizontal_bias="0.453"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>